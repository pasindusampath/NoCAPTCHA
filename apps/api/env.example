# Application Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
# PostgreSQL connection settings

# Database Host
DB_HOST=localhost

# Database Port
DB_PORT=5432

# Database Name (change per environment)
# Development: nx_monorepo_dev
# QA: nx_monorepo_qa
# Staging: nx_monorepo_staging
# Production: nx_monorepo_prod
DB_NAME=nx_monorepo_dev

# Database User
DB_USER=postgres

# Database Password
DB_PASSWORD=postgres

# Alternative: Database URL (overrides individual settings)
# Format: postgres://username:password@host:port/database
# DATABASE_URL=postgres://postgres:postgres@localhost:5432/nx_monorepo_dev

# Cloudflare Turnstile Configuration
# Get your keys from: https://dash.cloudflare.com/
# Site Key: Public key used in frontend (safe to expose)
# Secret Key: Private key used in backend (keep secure!)
CLOUDFLARE_SITE_KEY=your_site_key_here
CLOUDFLARE_SECRET_KEY=your_secret_key_here

# Verification Cache & Blocking Configuration
# Maximum verification attempts allowed in time window
VERIFICATION_MAX_ATTEMPTS=10
# Time window in minutes for rate limiting
VERIFICATION_TIME_WINDOW=5
# Maximum failed attempts before automatic blocking
VERIFICATION_MAX_FAILED=5
# Block duration in minutes after threshold is reached
VERIFICATION_BLOCK_DURATION=15
# Cache cleanup interval in minutes (removes old records)
VERIFICATION_CLEANUP_INTERVAL=30

# ============================================
# Environment-Specific Examples
# ============================================

# DEVELOPMENT
# NODE_ENV=development
# DB_NAME=nx_monorepo_dev
# DB_HOST=localhost
# DB_PORT=5432

# QA
# NODE_ENV=qa
# DB_NAME=nx_monorepo_qa
# DB_HOST=qa-db.example.com
# DB_PORT=5432

# STAGING
# NODE_ENV=staging
# DB_NAME=nx_monorepo_staging
# DB_HOST=staging-db.example.com
# DB_PORT=5432

# PRODUCTION
# NODE_ENV=production
# DB_NAME=nx_monorepo_prod
# DB_HOST=prod-db.example.com
# DB_PORT=5432

